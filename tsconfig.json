{
  "extends": "./packages/config/tsconfig/base.json",
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "noEmit": true,
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "@flaresmith/ui": ["./packages/ui/src"],
      "@flaresmith/types": ["./packages/types/src"],
      "@flaresmith/api-client": ["./packages/api-client/src"],
      "@flaresmith/utils": ["./packages/utils/src"],
      "@flaresmith/config": ["./packages/config"]
    },
    "types": ["node"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    ".turbo",
    "**/next.config.js",
    "**/tailwind.config.js",
    "**/postcss.config.js",
    "**/wrangler.toml"
  ]
}
