{
  "info": {
    "name": "CloudMake Core Integration Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "T133: Critical endpoint assertions (projects, environments, specs)"
  },
  "item": [
    {
      "name": "Get Environments",
      "request": {
        "method": "GET",
        "header": [
          {"key": "Authorization", "value": "Bearer {{API_TOKEN}}"}
        ],
        "url": {
          "raw": "{{API_BASE_URL}}/api/projects/{{PROJECT_ID}}/environments",
          "host": ["{{API_BASE_URL}}"],
          "path": ["api","projects","{{PROJECT_ID}}","environments"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200', () => pm.response.code === 200);",
              "const json = pm.response.json();",
              "pm.test('Has environments array', () => Array.isArray(json.environments));",
              "pm.test('Has meta.rateLimit', () => json.meta && json.meta.rateLimit);",
              "pm.test('Has circuitBreakers', () => json.meta && Array.isArray(json.meta.circuitBreakers));"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Apply Spec",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Authorization", "value": "Bearer {{API_TOKEN}}"},
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"projectId\": \"{{PROJECT_ID}}\"\n}"
        },
        "url": {
          "raw": "{{API_BASE_URL}}/api/specs/apply",
          "host": ["{{API_BASE_URL}}"],
          "path": ["api","specs","apply"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status 200', () => pm.response.code === 200);",
              "const json = pm.response.json();",
              "pm.test('Has drift report summary', () => json.summary && typeof json.summary.totalFiles === 'number');"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}
