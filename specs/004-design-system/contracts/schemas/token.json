{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://api.flaresmith.dev/schemas/design/token.json",
  "title": "DesignToken",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "name": {
      "type": "string",
      "pattern": "^(primary|accent|semantic|glass|elevation|spacing|radius|typography)\\.[a-z0-9-]+\\.[0-9]{2,3}$"
    },
    "category": {
      "type": "string",
      "enum": ["color", "spacing", "typography", "radius", "elevation", "glass", "semantic"]
    },
    "value": {},
    "version": {
      "type": "integer"
    },
    "accessibility_meta": {
      "type": "object"
    }
  },
  "required": ["id", "name", "category", "value", "version"]
}
