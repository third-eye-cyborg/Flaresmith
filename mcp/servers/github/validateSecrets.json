{
  "name": "github.validateSecrets",
  "description": "Validate presence and consistency of required secrets across GitHub scopes (Actions, Codespaces, Dependabot).",
  "inputSchema": {
    "type": "object",
    "properties": {
      "projectId": { "type": "string", "format": "uuid", "description": "Project identifier (UUID)" },
      "requiredSecrets": { "type": "array", "items": { "type": "string" }, "description": "Optional subset of secrets to validate" }
    },
    "required": ["projectId"],
    "additionalProperties": false
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "valid": { "type": "boolean" },
      "missing": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "secretName": { "type": "string" },
            "scope": { "type": "string" }
          },
          "required": ["secretName", "scope"],
          "additionalProperties": false
        }
      },
      "conflicts": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "secretName": { "type": "string" },
            "scopes": { "type": "array", "items": { "type": "string" } },
            "valueHashes": { "type": "object", "additionalProperties": { "type": "string" } }
          },
          "required": ["secretName", "scopes", "valueHashes"],
          "additionalProperties": false
        }
      },
      "summary": {
        "type": "object",
        "properties": {
          "totalSecrets": { "type": "number" },
          "missingCount": { "type": "number" },
          "conflictCount": { "type": "number" },
          "validCount": { "type": "number" }
        },
        "required": ["totalSecrets", "missingCount", "conflictCount", "validCount"],
        "additionalProperties": false
      },
      "remediationSteps": { "type": "array", "items": { "type": "string" } }
    },
    "required": ["valid", "missing", "conflicts", "summary", "remediationSteps"],
    "additionalProperties": false
  }
}
