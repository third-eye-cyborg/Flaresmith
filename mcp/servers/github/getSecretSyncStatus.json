{
  "name": "github.getSecretSyncStatus",
  "description": "Retrieve current secret synchronization status and GitHub API quota remaining for a project.",
  "inputSchema": {
    "type": "object",
    "properties": {
      "projectId": { "type": "string", "format": "uuid", "description": "Project identifier (UUID)" }
    },
    "required": ["projectId"],
    "additionalProperties": false
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "lastSyncAt": { "type": ["string", "null"], "description": "Timestamp of last sync (ISO) or null if never" },
      "status": { "type": "string", "enum": ["synced", "pending", "error", "never_synced"] },
      "pendingCount": { "type": "number" },
      "errorCount": { "type": "number" },
      "nextScheduledSyncAt": { "type": ["string", "null"], "description": "Timestamp of next scheduled sync or null" },
      "quotaRemaining": {
        "type": "object",
        "properties": {
          "core": { "type": "number" },
          "secrets": { "type": "number" }
        },
        "required": ["core", "secrets"],
        "additionalProperties": false
      }
    },
    "required": ["lastSyncAt", "status", "pendingCount", "errorCount", "nextScheduledSyncAt", "quotaRemaining"],
    "additionalProperties": false
  }
}
