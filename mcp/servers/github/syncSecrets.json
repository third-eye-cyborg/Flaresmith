{
  "name": "github.syncSecrets",
  "description": "Synchronize repository secrets across Actions, Codespaces, and Dependabot scopes with optional force overwrite.",
  "inputSchema": {
    "type": "object",
    "properties": {
      "projectId": { "type": "string", "format": "uuid", "description": "Project identifier (UUID)" },
      "secretNames": {
        "type": "array",
        "items": { "type": "string", "pattern": "^[A-Z][A-Z0-9_]*$" },
        "description": "Optional list of specific secrets to sync (defaults to all)"
      },
      "targetScopes": {
        "type": "array",
        "items": { "type": "string", "enum": ["codespaces", "dependabot"] },
        "description": "Target scopes to sync (defaults to both)"
      },
      "force": { "type": "boolean", "default": false, "description": "Overwrite conflicts by using Actions scope value" }
    },
    "required": ["projectId"],
    "additionalProperties": false
  },
  "outputSchema": {
    "type": "object",
    "properties": {
      "syncedCount": { "type": "number", "description": "Number of secrets successfully synced" },
      "skippedCount": { "type": "number", "description": "Number of secrets skipped (exclusions/conflicts)" },
      "errors": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "secretName": { "type": "string" },
            "scope": { "type": "string" },
            "error": { "type": "string" },
            "code": { "type": "string" }
          },
          "required": ["secretName", "scope", "error"],
          "additionalProperties": false
        }
      },
      "correlationId": { "type": "string", "format": "uuid" },
      "durationMs": { "type": "number" }
    },
    "required": ["syncedCount", "skippedCount", "errors", "correlationId", "durationMs"],
    "additionalProperties": false
  }
}
