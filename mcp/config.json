{
  "mcpServers": {
    "github": {
      "command": "node",
      "args": ["./mcp/servers/github/index.js"],
      "tools": [
        "github.createRepo",
        "github.createCodespace",
        "github.syncSecrets",
        "github.createEnvironments",
        "github.validateSecrets",
        "github.getSecretSyncStatus"
      ]
    },
    "design-system": {
      "command": "node",
      "args": ["./mcp/servers/design-system/index.js"],
      "tools": [
        "design.getTokens",
        "design.applyOverride",
        "design.rollbackTokens",
        "design.detectDrift",
        "design.auditAccessibility",
        "design.getLatestAudit"
      ]
    },
    "cloudflare": {
      "command": "node",
      "args": ["./mcp/servers/cloudflare/index.js"],
      "tools": [
        "cloudflare.deployWorker",
        "cloudflare.deployPages",
        "cloudflare.workerStatus",
        "cloudflare.pagesStatus"
      ]
    },
    "neon": {
      "command": "node",
      "args": ["./mcp/servers/neon/index.js"],
      "tools": []
    },
    "postman": {
      "command": "node",
      "args": ["./mcp/servers/postman/index.js"],
      "tools": []
    },
    "posthog": {
      "command": "npx",
      "args": ["-y", "@posthog/mcp-server-posthog"],
      "env": {
        "POSTHOG_API_KEY": "${POSTHOG_API_KEY}",
        "POSTHOG_HOST": "${POSTHOG_HOST}"
      },
      "tools": [
        "posthog.createOrganization",
        "posthog.createProject",
        "posthog.getProjects",
        "posthog.createFeatureFlag",
        "posthog.getFeatureFlags",
        "posthog.captureEvent",
        "posthog.identifyUser",
        "posthog.getInsights",
        "posthog.createDashboard"
      ]
    },
    "specs": {
      "command": "node",
      "args": ["./mcp/servers/specs/index.js"],
      "tools": []
    },
    "chat": {
      "command": "node",
      "args": ["./mcp/servers/chat/index.js"],
      "tools": []
    }
      ,
    "auth": {
      "command": "node",
      "args": ["./mcp/servers/auth/index.js"],
      "tools": [
        "auth.register",
        "auth.login",
        "auth.refresh",
        "auth.oauthCallback",
        "auth.adminLogin",
        "auth.userSignup",
        "auth.adminMfaVerify"
      ]
    },
    "billing": {
      "command": "node",
      "args": ["./mcp/servers/billing/index.js"],
      "tools": [
        "billing.createCheckout",
        "billing.validateReceipt",
        "billing.getSubscriptionStatus",
        "billing.processWebhook"
      ]
    },
    "chrome": {
      "command": "npx",
      "args": ["-y", "@executeautomation/mcp-playwright"],
      "tools": [
        "mcp_io_github_chr_click",
        "mcp_io_github_chr_emulate",
        "mcp_io_github_chr_list_pages",
        "mcp_io_github_chr_hover",
        "mcp_io_github_chr_take_screenshot",
        "mcp_io_github_chr_select_page",
        "mcp_io_github_chr_performance_stop_trace",
        "mcp_io_github_chr_navigate_page",
        "mcp_io_github_chr_performance_start_trace",
        "mcp_io_github_chr_evaluate_script",
        "mcp_io_github_chr_get_network_request",
        "mcp_io_github_chr_handle_dialog",
        "mcp_io_github_chr_performance_analyze_insight",
        "mcp_io_github_chr_upload_file",
        "mcp_io_github_chr_wait_for"
      ]
    }
  }
}