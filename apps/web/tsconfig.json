{
  "extends": "@cloudmake/config/tsconfig/react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*"],
      "@cloudmake/api-client": ["../../packages/api-client/src"],
      "@cloudmake/types": ["../../packages/types/src"],
      "@cloudmake/utils": ["../../packages/utils/src"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next", "out"]
}
