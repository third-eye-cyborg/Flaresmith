{
  "expo": {
    "name": "Flaresmith",
    "slug": "flaresmith",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.thirdeyecyborg.flaresmith"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.thirdeyecyborg.flaresmith"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": ["expo-router"],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "POSTHOG_API_KEY": process.env.POSTHOG_API_KEY,
      "POSTHOG_HOST": process.env.POSTHOG_HOST || "https://app.posthog.com",
      "ENVIRONMENT": process.env.ENVIRONMENT || "dev",
      "APP_DOMAIN": process.env.APP_DOMAIN || "dev.flaresmith.com"
    }
  }
}
