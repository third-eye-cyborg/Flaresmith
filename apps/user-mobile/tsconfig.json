{
  "extends": "@flaresmith/config-tsconfig/react.json",
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/*", "./src/*"],
      "@flaresmith/api-client": ["../../packages/api-client/src"],
      "@flaresmith/types": ["../../packages/types/src"],
      "@flaresmith/utils": ["../../packages/utils/src"],
      "@flaresmith/ui": ["../../packages/ui/src"]
    },
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
