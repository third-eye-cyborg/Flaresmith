{
  "extends": "@flaresmith/config-tsconfig/react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./app/*",
        "./src/*"
      ],
      "@flaresmith/api-client": [
        "../../packages/api-client/src"
      ],
      "@flaresmith/types": [
        "../../packages/types/src"
      ],
      "@flaresmith/utils": [
        "../../packages/utils/src"
      ],
      "@flaresmith/ui": [
        "../../packages/ui/src"
      ]
    },
    "jsx": "preserve",
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out"
  ]
}
